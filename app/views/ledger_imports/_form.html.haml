= form_for(@ledger_import) do |f|
  - if @ledger_import.errors.any?
    #error_explanation
      %h2
        = pluralize(@ledger_import.errors.count, "error")
        prohibited this ledger_import from being saved:
      %ul
        - @ledger_import.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :purchaser_name
    %br/
    = f.text_area :purchaser_name
  .field
    = f.label :item_description
    %br/
    = f.text_area :item_description
  .field
    = f.label :item_price
    %br/
    = f.text_field :item_price
  .field
    = f.label :purchase_count
    %br/
    = f.number_field :purchase_count
  .field
    = f.label :merchant_address
    %br/
    = f.text_area :merchant_address
  .field
    = f.label :merchant_name
    %br/
    = f.text_area :merchant_name
  .actions
    = f.submit
